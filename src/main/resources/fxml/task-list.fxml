<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="900.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.phoswald.sample.task.TaskListController">
  <VBox spacing="15">
    <padding>
       <Insets bottom="15" left="15" right="15" top="15" />
    </padding>
    <HBox prefHeight="26.0" spacing="15">
      <Button fx:id="homeButton" mnemonicParsing="false" text="Home" />
    </HBox>
    <TableView fx:id="taskList" prefHeight="786.0" prefWidth="1065.0">
      <columns>
        <TableColumn fx:id="taskDone" prefWidth="60.0" text="Done" />
        <TableColumn fx:id="taskTitle" prefWidth="792.0" text="Title" />
        <TableColumn fx:id="taskUpdated" prefWidth="189.0" text="Updated" />
      </columns>
    </TableView>
    <HBox prefHeight="26.0" spacing="15">
      <TextField fx:id="addTitle" prefHeight="26.0" prefWidth="970.0" />
      <Button fx:id="addButton" prefWidth="80.0" text="Add" />
    </HBox>
  </VBox>
</Pane>
