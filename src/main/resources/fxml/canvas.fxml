<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="900.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.phoswald.sample.canvas.CanvasController">
  <VBox spacing="15">
    <padding>
       <Insets bottom="15" left="15" right="15" top="15" />
    </padding>
    <HBox prefHeight="26.0" spacing="15">
      <Button fx:id="homeButton" mnemonicParsing="false" text="Home" />
      <Button fx:id="clearButton" text="Clear" />
      <Button fx:id="drawCanvasButton" text="Draw Canvas" />
      <Button fx:id="updateImageButton" text="Update Image" />
    </HBox>
    <HBox spacing="15">
      <Canvas fx:id="canvas" height="512" width="512" />
      <ImageView fx:id="imageView" fitHeight="512.0" fitWidth="512.0" />
    </HBox>
  </VBox>
</Pane>
